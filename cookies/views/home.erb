<!-- views/home.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Home</title>
</head>
<body>
  <h1>Welcome, <%= @user.username %>!</h1>
  <h2>Choose your preference:</h2>
  <form action="/prefer" method="post">
    <input type="hidden" name="authenticity_token" value="unique_token_here">

  <button type="submit" name="preference" value="Option1">Option 1</button>
  <button type="submit" name="preference" value="Option2">Option 2</button>
  <button type="submit" name="preference" value="Option3">Option 3</button>
</form>

  <p>Your current preference is: <%= request.cookies['preference'] || "None selected" %></p>
  <a href="/logout">Logout</a>
</body>
</html>
